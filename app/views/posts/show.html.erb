<% content_for :title do %><%= @post.title %><% end %>

<% content_for :description do %><%= description(@post.content) %><% end %>

<% if current_user %>
<% content_for :robots do %>
<meta name="robots" content="noarchive"/>
<meta name="robots" content="noindex, nofollow"/>
<% end %>
<% end %>

<% content_for :adminbar_left do %>

  <li><%= link_to "Edit Post", edit_post_path(@post) %></li>

  <% if @post.commentable %>

    <li>
      <%= form_for(@post) do |f| %>
        <div><%= f.hidden_field :commentable, :value => "false" %></div>
        <div><%= image_submit_tag "lightbulb-on.png",
                                  :class  => "comments-toggle",
                                  :title  => "Comments Open",
                                  :alt    => "Comments Open" %>
        </div>
      <% end %>
    </li>

  <% else %>

    <li>
      <%= form_for(@post) do |f| %>
        <div><%= f.hidden_field :commentable, :value => "true" %></div>
        <div><%= image_submit_tag "lightbulb-off.png",
                                  :class  => "comments-toggle",
                                  :title  => "Comments Closed",
                                  :alt    => "Comments Closed" %>
        </div>
      <% end %>
    </li>

  <% end %>

<% end %>

<% content_for :adminbar_right do %>
  <li class="right">
    <%= link_to "Delete Post", post_path(@post),
                :confirm => "Are you sure you want to delete this post?",
                :method => :delete, :class => "delete" %>
  </li>
<% end %>

<div class="post">
  <h4> If you haven't seen <%= link_to 'The 15 minute E-Commerce Site CLICK HERE', info_video_path(7) %></h4><br/>
  <h4> I'm currently looking for Contract jobs, <%= link_to 'Contact Me', new_contact_post_path %> if you are interested.  Dave.</h4>
  <h2><%= link_to @post.title, @post, :class => "article" %>
    <span class="nobreak">
      <span class="author"><%= @post.author %></span>
      <span class="date"><%= @post.posted_at.strftime("%b %d") %></span>
    </span>
  </h2>

  <p class="meta">
    <%= render :partial => "meta", :locals => { :post => @post } %>
  </p>

  <div class="entry">
    <%= @post.content.html_safe %>
  </div><!--entry-->

  <ul class="social">

    <li>
      <script type="text/javascript">
      //<![CDATA[
      (function() {
      document.write('<a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="yourtwitteraccount">Tweet</a>');
      var s = document.createElement('SCRIPT'), s1 = document.getElementsByTagName('SCRIPT')[0];
      s.type = 'text/javascript';
      s.async = true;
      s.src = 'http://platform.twitter.com/widgets.js';
      s1.parentNode.insertBefore(s, s1);
      })();
      //]]>
      </script>
    </li>

    <li>
      <script type="text/javascript">
      //<![CDATA[
      (function() {
      document.write('<fb:like></fb:like>');
      var s = document.createElement('SCRIPT'), s1 = document.getElementsByTagName('SCRIPT')[0];
      s.type = 'text/javascript';
      s.async = true;
      s.src = 'http://connect.facebook.net/en_US/all.js#xfbml=1';
      s1.parentNode.insertBefore(s, s1);
      })();
      //]]>
      </script>
    </li>
  </ul><!--social-->

  <div class="comments_canvas">
    <% if @post.comments.count > 0 %>
      <h2 class="comment_count"><%= pluralize(@post.comments.count, "comment") %> so far</h2>

      <div id="comments" class="comments">
        <% for comment in @post.comments.all %>
        <%= render :partial => comment, :locals => { :post => @post } %>
        <% end %>
      </div><!--comments-->
    <% else %>

      <h2 class="comment_count plain"></h2>
      <div id="comments" class="comments"></div><!--comments-->
    <% end %>

    <div id="post_a_comment">
    <% if !@post.commentable %>
      <h2 id="comments_closed">Comments are closed</h2>
    <% end %>

    <% if @post.commentable %>
      <h2>Post a comment</h2>
      <%= form_for([@post, @comment], :remote => true) do |f| %>
        <div id="new_comment_canvas">
          <fieldset>
            <div class="form-field">
            <% if current_user %>
              <%= f.text_field :name, :value => current_user.initials, :size => "40" %>
            <% else %>
              <%= f.text_field :name, :value => "Name", :size => "40" %>
            <% end %>
            </div>

            <div class="form-field">
              <%= f.text_field :email, :value => "Email", :size => "40" %>
            </div>

            <div class="form-field">
              <%= f.text_field :website, :value => "Website", :size => "40" %>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-field">
              <%= f.text_area :content,
                              :cols => "55",
                              :rows => "6",
                              :value => "Remember, your comment represents you. Let's add value. Some XHTML is welcomed (strong em blockquote code)." %>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-submit">
              <%= f.submit "Post comment", :disable_with => "Post comment" %>
              <!-- <span>or</span>
                    <%= link_to "Preview", preview_post_comments_path(@post),
                                                        :id => "preview_comment_link",
                                                        :rel => "nofollow" %> -->
            </div>
          </fieldset>
        </div><!-- new_comment_canvas -->

        <div id="comment_preview_canvas">
          <div id="comment_preview"></div>

          <div class="form-submit">
            <%= f.submit "Post comment",  :disable_with => "Post comment",
                                          :id => "comment_submit_preview" %>
            <span>or</span> <a id="edit_comment_link" href="#">Edit</a>
          </div>
        </div><!--comment_preview_canvas-->
      <% end %>
    <% end %>
    </div><!--post_a_comment-->

  </div><!--comments_canvas-->
</div><!--post-->

<% content_for :sidebar do %>
  <%= auto_discovery_link_tag(:rss, posts_url(:format => 'rss')) %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>